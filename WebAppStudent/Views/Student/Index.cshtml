@using WebAppStudent.Models;
@model List<Student>

@{
    ViewBag.Title = "Student Page";
}

<h3>List of Students</h3>

@Html.ActionLink("Register New", "AddStudent")

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", new { id = item.StudentId })

                @Html.ActionLink("Details", "DetailsOfStudent", new { id = item.StudentId })

                @Html.ActionLink("Delete", "DeleteStudent", new { id = item.StudentId })
            </td>
        </tr>
    }
</table>
